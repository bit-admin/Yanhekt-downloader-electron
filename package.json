{
  "name": "yanhekt-downloader",
  "version": "1.0.0",
  "description": "Video downloader for Yanhekt",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "electron-debug": "^4.1.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ffmpeg-static": "^5.2.0",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.yanhekt.autoslides.app",
    "productName": "Yanhekt Downloader",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}-macOS-${arch}.${ext}",
      "asarUnpack": [
        "node_modules/ffmpeg-static/ffmpeg"
      ]
    },
    "dmg": {
      "background": "build/background.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "appId": "Yanhekt Downloader",
      "files": [
        "!node_modules/ffmpeg-static"
      ],
      "extraResources": [
        {
          "from": "build/binaries/win-${arch}",
          "to": "bin",
          "filter": ["**/*"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Yanhekt Downloader",
      "perMachine": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}-Setup-${version}-Windows-${arch}.${ext}"
    }
  }
}
